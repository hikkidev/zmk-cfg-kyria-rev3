#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include "keys_ru.h"

// Layers
#define L_EN 0
#define L_RU 1
#define L_SYS 2
#define L_GAME 3

// Variables
#define ___ &trans
#define XXX &none


#define SMART_SHFT &bt_sh LSHIFT LSHIFT

/ {
    behaviors {
        skq: sticky_key_quick_release {
            compatible = "zmk,behavior-sticky-key";
            label = "STICKY_KEY_QUICK_RELEASE";
            #binding-cells = <1>;
            bindings = <&kp>;
            release-after-ms = <700>; // duration.extra-long1
            quick-release;
            ignore-modifiers;
        };

        td_mt: tap_dance_mod_tap {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_0";
            #binding-cells = <0>;
            tapping-term-ms = <200>; // duration.short4
            bindings = <&mt LC(C) C>, <&kp LS(C)>;
        };

        bt_sh: sticky_hold_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <150>; // duration.short3
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
            bindings = <&skq>, <&kp>;
        };
    };

    macros {
        sll: select_lang_layer {
            compatible = "zmk,behavior-macro-one-param";
            label = "macro_select_lang_and_layer";
            #binding-cells = <1>;
            bindings = 
                <&kp LA(SPACE)>,
                <&macro_param_1to1>,
                <&macro_press &to MACRO_PLACEHOLDER>
            ;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        layer_home_workman {
            bindings = <
            XXX &kp Q &kp D &kp R &kp W &kp B                                     &kp J &kp F &kp U     &kp P   &kp SEMI XXX
            XXX &kp A &kp S &kp H &kp T &kp G                                     &kp Y &kp N &kp E     &kp O   &kp I    XXX
            XXX &kp Z &kp X &kp M &kp C &kp V XXX       XXX               XXX XXX &kp K &kp L &kp COMMA &kp DOT &kp FSLH XXX
                            XXX   &mo L_SYS   &kp SPACE SMART_SHFT XXX    XXX XXX XXX   XXX   XXX
            >;
        };

        layer_qwerty {
            bindings = <
            XXX &kp Q &kp W &kp E &kp R &kp T                    &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSLH
            XXX &kp A &kp S &kp D &kp F &kp G                    &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
            XXX &kp Z &kp X &kp C &kp V &kp B XXX XXX    XXX XXX &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &to L_EN
                            ___   ___   ___   ___ ___    ___ ___ ___   ___    ___
            >;
        };

        layer_system_nav {
            bindings = <
            ___ ___        &kp LG(N7) &kp LG(N8) &kp LG(N9) ___                  ___ ___ ___ ___ ___ ___
            ___ &kp LG(N0) &kp LG(N1) &kp LG(N2) &kp LG(N3) ___                  ___ ___ ___ ___ ___ ___
            ___ ___        &kp LG(N4) &kp LG(N5) &kp LG(N6) ___ ___      ___ ___ ___ ___ ___ ___ ___ ___
                           ___        ___        ___        ___ ___      ___ ___ ___ ___ ___
            >;
        };

        layer_numbers {
            bindings = <
            ___ ___    &kp N7 &kp N8 &kp N9 ___                  ___ ___ ___ ___ ___ ___
            ___ &kp N0 &kp N1 &kp N2 &kp N3 ___                  ___ ___ ___ ___ ___ ___
            ___ ___    &kp N4 &kp N5 &kp N6 ___ ___      ___ ___ ___ ___ ___ ___ ___ ___
                       ___    ___    ___    ___ ___      ___ ___ ___ ___ ___
            >;
        };

        layer_games_qwerty {
             bindings = <
             &kp ESC   &kp N1    &kp N2 &kp N3 &kp N4 &kp N5                                  &kp N6 &kp N7         &kp N8         &kp N9          &kp N0 &kp BACKSPACE
             &kp TAB   XXX       &kp Q  &kp W  &kp E  &kp R                                   &kp T  &kp Y          &kp UP_ARROW   &kp I           &kp O  &kp ENTER
             &kp GRAVE &kp LSHFT &kp A  &kp S  &kp D  &kp F &kp G     &kp H       &kp J &kp K &kp L  &kp LEFT_ARROW &kp DOWN_ARROW &kp RIGHT_ARROW &kp P  &to L_EN
                                        &kp Z  &kp X  &kp C &kp LCTRL &kp SPACE   &kp V &kp B &kp N  &kp M          XXX
             >;
        };

        // LAYER TEMPLATES

